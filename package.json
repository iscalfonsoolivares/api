{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:server": "NODE_ENV=development nodemon --ignore 'public/js/*.js' index.js ",
    "start": "NODE_ENV=production node index.js",
    "dev:sass": "node-sass client/sass/main.scss public/css/styles.css -w",
    "dev:typescript": "webpack --config webpack.dev.js",
    "build:typescript": "webpack --config webpack.prod.js",
    "build:sasscompile": "node-sass client/sass/main.scss public/css/styles.compiled.css",
    "build:postcssprefix": "postcss --use autoprefixer -b 'last 10 versions' public/css/styles.compiled.css -o public/css/styles.prefixed.css",
    "build:sasscompress": "node-sass public/css/styles.prefixed.css public/css/styles.css --output-style compressed",
    "build:styles": "npm run build:sasscompile && npm run build:postcssprefix && npm run build:sasscompress",
    "dev": "concurrently npm:dev:*",
    "build": "npm run build:typescript && npm run build:styles",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iscalfonsoolivares/api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iscalfonsoolivares/api/issues"
  },
  "homepage": "https://github.com/iscalfonsoolivares/api#readme",
  "dependencies": {
    "aws-sdk": "^2.799.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.10.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "autoprefixer": "^10.0.4",
    "concurrently": "^5.3.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0"
  }
}
